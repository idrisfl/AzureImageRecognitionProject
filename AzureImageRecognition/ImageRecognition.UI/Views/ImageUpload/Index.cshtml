<form method="post" enctype="multipart/form-data" action="/ImageUpload/Upload">
    @{
        ViewData["Title"] = "Image Upload";
    }

    <h3>Téléchargez un ou plusieurs fichiers</h3>
    <div class="container">
        <div class="row">
            <div class="col">
                <input type="file" name="files" multiple="multiple"/>
            </div>
            <div class="col">
                <input type="submit" value="Soumettre" />
            </div>
        </div>
    </div>
</form>
